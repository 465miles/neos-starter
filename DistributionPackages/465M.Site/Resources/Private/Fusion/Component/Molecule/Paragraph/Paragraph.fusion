prototype(465M.Site:Component.Molecule.Paragraph) < prototype(Neos.Fusion:Component) {

    @propTypes {
        @strict = true
        fontSize = ${PropTypes.string.isRequired}
        columns = ${PropTypes.string.isRequired}
        spacingTop = ${PropTypes.string}
        spacingBottom = ${PropTypes.string}
        color = ${PropTypes.string}
        content = ${PropTypes.string.isRequired}
        extraClass = ${PropTypes.string}
    }

    renderer = afx`
        <465M.Site:Component.Organism.Container
            spacingTop={props.spacingTop}
            spacingBottom={props.spacingBottom}
        >
            <465M.Site:Component.Atom.Paragraph
                fontSize={props.fontSize}
                color={props.color}
                columns={props.columns}
                extraClass={props.extraClass}
            >
                {props.content}
            </465M.Site:Component.Atom.Paragraph>
        </465M.Site:Component.Organism.Container>
    `
}
