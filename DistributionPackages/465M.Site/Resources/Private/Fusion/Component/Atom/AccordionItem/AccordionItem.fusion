prototype(465M.Site:Component.Atom.AccordionItem) < prototype(Neos.Fusion:Component) {

    @propTypes {
        @strict = true
        id = ${PropTypes.anyOf(PropTypes.string, PropTypes.integer).isRequired}
        title = ${PropTypes.string.isRequired}
        content = ${PropTypes.any}
    }

    renderer = afx`
        <div class="border-b border-gray-200">
            <button
                class="w-full px-5 md:px-10 py-3 md:py-5 text-lg text-left font-bold transition-all duration-500"
                x-on:click={"selected !== '" + props.id + "' ? selected = '" + props.id + "' : selected = null"}
                x-bind:class={"selected == '" + props.id + "' ? 'text-blue-500' : ''"}>
                <465M.Site:Component.Atom.Headline
                    tagName='h3'
                    fontSize='lg'
                    color='text-inherit'>
                    {props.title}
                </465M.Site:Component.Atom.Headline>
            </button>
            <div
                class="overflow-hidden px-5 md:px-10 transition-all duration-500"
                x-bind:style={"selected == '" + props.id + "' ? 'max-height: ' + $el.scrollHeight + 'px' : ''"}
                x-bind:class={"selected == '" + props.id + "' ? 'max-h-auto pb-3 md:pb-5' : 'max-h-[0] py-0'"}
                x-effect="console.log($el.scrollHeight)"
            >
                {props.content}
            </div>
        </div>
    `
}
