prototype(465M.Site:Component.Atom.Paragraph) < prototype(Neos.Fusion:Component) {

    @propTypes {
        text = ${PropTypes.string.isRequired}
        extraClass = ${PropTypes.string}
    }

    class = 'paragraph'
    class.@process.extraClass = ${this.extraClass ? value + ' ' + this.extraClass : value}

    renderer = afx`
        <div class={props.class}>
            {props.text}
        </div>
    `
}
